<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.nzarudna.shoppinglist.ui.productlists.ProductListsViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/lists_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lists_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/show_create_list_menu"
            android:layout_width="@dimen/fab_size"
            android:layout_height="@dimen/fab_size"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_add_black"
            app:layout_constraintBottom_toBottomOf="@id/lists_root"
            app:layout_constraintRight_toRightOf="@id/lists_root" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_copy_list"
            android:layout_width="@dimen/fab_size_mini"
            android:layout_height="@dimen/fab_size_mini"
            android:layout_margin="@dimen/fab_margin_mini"
            android:src="@drawable/ic_content_copy_black"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/show_create_list_menu"
            app:layout_constraintRight_toRightOf="@id/lists_root" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_add_list"
            android:layout_width="@dimen/fab_size_mini"
            android:layout_height="@dimen/fab_size_mini"
            android:layout_margin="@dimen/fab_margin_mini"
            android:src="@drawable/ic_add_black"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/btn_copy_list"
            app:layout_constraintRight_toRightOf="@id/lists_root" />

    </android.support.constraint.ConstraintLayout>
</layout>