<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.nzarudna.shoppinglist.ui.users.EditUserViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dialog_side_margin"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/dialog_side_margin"
            android:autofillHints="@string/name"
            android:inputType="textCapSentences"
            android:text="@={viewModel.name}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/validation_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.validationMessage}"
            app:layout_constraintLeft_toLeftOf="@id/item_name"
            app:layout_constraintTop_toBottomOf="@id/item_name"
            tools:text="Name is invalid" />

        <EditText
            android:id="@+id/current_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/dialog_bottom_margin"
            android:text="@={viewModel.currentUserName}"
            android:visibility="@{viewModel.userCompleted ? View.GONE : View.VISIBLE}"
            app:layout_constraintLeft_toLeftOf="@id/item_name"
            app:layout_constraintRight_toRightOf="@id/item_name"
            app:layout_constraintTop_toBottomOf="@id/validation_error" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>