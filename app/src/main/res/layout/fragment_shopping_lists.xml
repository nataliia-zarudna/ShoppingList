<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.nzarudna.shoppinglist.ui.lists.ProductListsViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/lists_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lists_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_add_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/lists_root"
            app:layout_constraintRight_toRightOf="@id/lists_root"
            android:layout_margin="@dimen/fab_margin" />

    </android.support.constraint.ConstraintLayout>
</layout>